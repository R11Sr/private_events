<p id="notice"><%= notice %></p>

<div class="section">
    <div class="container">
        <div class="column is-centered">

            <div class="column is-two-fifths is-offset-one-quarter">
                <h2 class="title is-1">Event Details</h2>
                
                <p>
                  <strong>Location:</strong>
                  <%= @event.location %>
                </p>

                 <p>
                  <strong>Date:</strong>
                  <%= @event.date %>
                </p>

                <% if current_user == @event.creator %>
                     <%= link_to 'Edit', edit_event_path(@event), class: 'button is-dark' %> |
                <% end %>
                
                <% if @event.creator_id != current_user.id  %>

                    <% if @event.date >= Date.today %>

                        <%= link_to 'Attend', new_invite_path(event_id: @event.id), class: 'button is-dark' %>|
                      <% else %>
                      <%# disabled button  %>
                        <%= link_to 'Attend', new_invite_path(event_id: @event.id), class: 'button is-dark',  disabled: true %>|

                    <% end %>
                <% end %>
                <%= link_to 'Back', events_path, class: 'button is-dark' %>
            </div>
        </div>
    </div>
</div>

