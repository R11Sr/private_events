

<div class="section">
    <div class="container">
        <div class="column is-centered">

            <div class="column is-two-fifths is-offset-one-quarter">
                <h2 class="title is-1">New Event</h2>

                <%=simple_form_for @event do |f| %>
                    <%=f.error_notification %>

                    <div class="field">
                        <div class="control">
                            <%=f.input :location,
                            required: true,
                            autofocus: true,
                            input_html: {class: 'input'}, wrapper: false, label_html:{class: 'label'}
                            %>
                        </div>

                    </div>

                    <div class="field">
                        <div class="control">
                            <%=f.button :submit, 'Create Event', class: 'button is-medium is-success'%>
                        </div>
                    </div>

                <% end %>
                <%= link_to 'Back', events_path %>      
            </div>
        </div>
    </div>
</div>


