<%=simple_form_for @event do |f| %>
    <%=f.error_notification %>
    <div class="field">
        <div class="control">
            <%=f.input :location,
            required: true,
            autofocus: true,
            input_html: {class: 'input'}, wrapper: false, label_html:{class: 'label'}
            %>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <%=f.input :date,
            required: true,
            autofocus: true,
            input_html: {class: 'input'}, wrapper: false, label_html:{class: 'label'}
            %>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <%=f.button :submit, 'Create Event', class: 'button is-medium is-success'%>
        </div>
    </div>
<% end %>
               