
<div class="section">
    <div class="container">
        <div class="column is-centered">

            <div class="column is-two-fifths is-offset-one-quarter">
                <h2 class="title is-1">Log In</h2>

                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs">
                    <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email", class: "input" },  wrapper: false, label_html: {class: 'label'} %>
                    <%= f.input :password,
                                required: false,
                                input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Log in", class: 'button is-medium is-success' %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>

